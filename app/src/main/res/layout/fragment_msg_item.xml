<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp">

    <TextView
        android:id="@+id/item_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/text_green_cir"
        android:text="æŠ¤"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <View
        android:id="@+id/item_isread"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/text_rea_raid" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_job"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/item_job"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_job_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="TextView"
            android:textColor="@color/mainColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_job_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="TextView" />
    </LinearLayout>
</RelativeLayout>